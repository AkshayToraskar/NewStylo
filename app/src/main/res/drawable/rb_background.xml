<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#313f45" />
            <solid android:color="#3c4d54" />
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"></padding>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#313f45" />
            <solid android:color="#3c4d54" />
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"></padding>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <!--<stroke android:width="1dip" android:color="#ededed" />-->
            <solid android:color="#546E7A" />
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"></padding>
        </shape>
    </item>
</selector>